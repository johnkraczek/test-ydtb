{
  "name": "@ydtb/core",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "check": "tsc",
    "db:push": "drizzle-kit push",
    "db:reset": "bun run scripts/reset-db.ts",
    "db:reset:force": "bun run scripts/reset-db.ts --force",
    "lint": "next lint",
    "env:validate": "bun -e \"import('./src/env').then(m => m.env)\"",
    "env:generate": "bun scripts/generate-env-example.js",
    "stop": "pkill -f 'next dev' || true",
    "restart": "bun run stop && bun run dev"
  },
  "dependencies": {
    "@radix-ui/react-slider": "^1.3.6",
    "@react-email/components": "^1.0.1",
    "@react-email/tailwind": "^2.0.1",
    "@t3-oss/env-nextjs": "^0.9.2",
    "@ydtb/basic": "workspace:*",
    "better-auth": "1.4.6",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.23.26",
    "input-otp": "^1.4.2",
    "nodemailer": "^7.0.11",
    "react-easy-crop": "^5.5.6",
    "sonner": "^2.0.7",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.19.27",
    "@types/nodemailer": "^7.0.4",
    "drizzle-kit": "^0.31.8",
    "next": "^16.0.10",
    "typescript": "^5.9.3"
  }
}