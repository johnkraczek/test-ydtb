# Core Environment Variables
# Database connection string
DATABASE_URL=postgresql://postgres:password@localhost:5432/crm_toolkit

# Secret key for Better Auth (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET=your-secret-key-here-at-least-32-characters

# Public application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node environment (development, test, production)
NODE_ENV=development

# Package Environment Variables
# =============================


# Basic Package
# ======================================

# Server-side variables
# Base URL for the basic API
BASIC_API_URL=required-value

# API key for the basic service
BASIC_API_KEY=

# Number of retry attempts
BASIC_RETRY_ATTEMPTS=

# Request timeout in milliseconds
BASIC_TIMEOUT_MS=

# Client-side variables (public)
# Enable the basic module # default: true
NEXT_PUBLIC_BASIC_ENABLED=

# Enable debug mode # default: false
NEXT_PUBLIC_BASIC_DEBUG=

# Version of the basic module # default: 1.0.0
NEXT_PUBLIC_BASIC_VERSION=

